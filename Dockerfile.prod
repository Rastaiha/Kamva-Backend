# pull official base image
FROM python:3.11

# set work directory
WORKDIR /usr/src/app

RUN pip install --upgrade pip

# copy requirements
COPY requirements.txt /usr/src/requirements.txt

RUN pip install -r /usr/src/requirements.txt

# copy entrypoint-prod.sh
COPY ./entrypoint.prod.sh /usr/src/app/entrypoint.prod.sh

# copy project
COPY . /usr/src/app/

RUN adduser sepid

RUN mkdir -p /usr/src/app/logging && chown -R sepid /usr/src/app/logging \
	&& mkdir -p /usr/src/app/staticfiles && chown -R sepid /usr/src/app/staticfiles \
	&& mkdir -p /usr/src/app/media && chown -R sepid /usr/src/app/media

RUN chown -R sepid /usr/src/app/

USER sepid

# run entrypoint.prod.sh
ENTRYPOINT ["/usr/src/app/entrypoint.prod.sh"]